                    <Image x:Name="Page3" Source="{helpers:Translate Page3}" />
            </classes:PinchToZoomContainer.Content>
        </classes:PinchToZoomContainer>
        </StackLayout>
  </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label Text="{helpers:Translate Page4Desc}" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" TextColor="{DynamicResource TextColor}" />
            <classes:PinchToZoomContainer>
                <classes:PinchToZoomContainer.Content>
                    <Image  x:Name="Page4" Source="{helpers:Translate Page4}" />
                </classes:PinchToZoomContainer.Content>
            </classes:PinchToZoomContainer>
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label Text="{helpers:Translate Page5Desc}" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" TextColor="{DynamicResource TextColor}" />
            <classes:PinchToZoomContainer>
                <classes:PinchToZoomContainer.Content>
                    <Image x:Name="Page5" Source="{helpers:Translate Page5}" />
                </classes:PinchToZoomContainer.Content>
            </classes:PinchToZoomContainer>
        </StackLayout>
    </ContentPage>
    <ContentPage>
